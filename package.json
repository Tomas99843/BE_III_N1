{
  "name": "plantilladocumentacion",
  "version": "1.0.0",
  "description": "API para sistema de adopciÃ³n de mascotas - Backend III Proyecto Final",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "mocha test/**/*.test.js --exit --timeout 10000 --reporter spec",
    "test:sessions": "mocha test/sessions.test.js --exit --timeout 10000 --reporter spec",
    "test:sessions:functional": "mocha test/sessions.functional.test.js --exit --timeout 10000 --reporter spec",
    "test:adoption": "mocha test/adoption.test.js --exit --timeout 10000 --reporter spec",
    "test:adoption:functional": "mocha test/adoption.functional.test.js --exit --timeout 10000 --reporter spec",
    "test:functional": "mocha test/**/*.functional.test.js --exit --timeout 10000 --reporter spec",
    "test:unit": "mocha test/**/*.test.js --grep 'Unit' --exit --timeout 10000 --reporter spec",
    "test:all": "mocha test/**/*.test.js test/**/*.functional.test.js --exit --timeout 10000 --reporter spec",
    "test:watch": "mocha test/**/*.test.js --watch --exit --timeout 10000 --reporter spec",
    "test:coverage": "nyc mocha test/**/*.test.js --exit --timeout 10000 --reporter spec",
    "test:ci": "npm run test:unit && npm run test:functional",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "security-check": "npm audit --audit-level=moderate",
    "docker:build": "docker build -t adoptme-api .",
    "docker:run": "docker run -p 8080:8080 adoptme-api",
    "docker:test": "docker build -t adoptme-api-test . && docker run --rm adoptme-api-test npm test"
  },
  "keywords": [
    "adopciones",
    "mascotas",
    "api",
    "backend",
    "coderhouse",
    "security",
    "testing",
    "docker",
    "swagger",
    "jwt"
  ],
  "author": "Tu Nombre",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^7.0.0",
    "mongoose": "^6.7.5",
    "multer": "^1.4.5-lts.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.26",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.56.0",
    "mocha": "^10.1.0",
    "mongodb-memory-server": "^9.1.1",
    "nodemon": "^3.1.11",
    "nyc": "^15.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
